<style>
  @import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,300;1,100&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=Tilt+Prism&display=swap');

  * {
    font-family: "Lato", "Georgia, 'Times New Roman', Times, serif";
    font-weight: bold;
    color: #454242;
  }



  html {
    font-size: 62.5%;
    scroll-behavior: smooth;
  }

  li,
  p,
  a {
    font-size: 1.6rem;
  }

  h1 {
    font-size: 4rem;
    color: black !important;
  }

  h2 {
    font-size: 3.5rem;
    color: black !important;
  }

  h3 {
    font-size: 3rem;
    color: black !important;
  }

  .row {
    margin: 0;
  }

  .navbar-style {
    background-color: black;
    color: white;
  }

  #logo {
    display: initial;
    font-weight: 600;
    font-size: 3.5rem;
    letter-spacing: 1px;
    text-transform: capitalize;
    color: #0a6048;
    text-shadow: 2px 5px 3px rgba(0, 0, 0, 0.06);
    padding: 0;
  }

  .navbar-light .navbar-nav .nav-link {
    color: #ffffff;
    font-variant: small-caps;
    letter-spacing:
      0.1rem;
    padding: 1.1rem;
    margin: 1px;
    font-size: 2rem;
  }

  .navbar-light .navbar-nav .nav-link:hover {
    color: #2cb68f;
    background-color: black;

  }

  /* our hero sections */
  .hero-text h1 {
    font-size: 5.5rem;
    line-height: 1.5;
    text-shadow: 5px 4px 11px rgba(0, 0, 0,
        0.26);
    letter-spacing: 1px;
    color: #454242 !important;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .hero-text {
    animation: slide 4s infinite alternate;
    animation-delay: 0s;
  }

  @keyframes slide {
    from {
      background-color: white;
      width: 0%;
      text-wrap: nowrap;
      color: white !important;
    }

    to {
      width: 100%;
      text-wrap: nowrap;
      background-image: linear-gradient(to right, rgb(236, 231, 231), rgb(165, 158, 158), #0a6048);
      border-radius: 10px;
    }
  }

  .hero-text h1:nth-child(2) {
    font-weight: bold;
    color: #ede7e7;
  }

  .hero-text p,
  .our-services p,
  label {
    font-size: 1.7rem;
    letter-spacing: 0.2rem;
    color: #454242;
    text-transform: capitalize;
    margin-top: 1.5rem;
    margin-bottom: 5rem;
  }

  .hero-text p span {
    font-weight:
      bold;
    color: #454242;
  }

  .srcimg {
    border-radius: 10px;
  }

  .servicescontent {
    color: black !important;
  }

  .srcimg:hover {
    transform: scale(1.1);
  }

  .btn {
    margin-top: 2px;
    padding: 6px 25px;
    border: transparent;
    border-radius: 10px;
    color: #fff;
    font-size: 18px;
    font-variant: small-caps;
    font-weight: bolder;
    letter-spacing: 1px;
    border: 2px solid #fff;
    background-image:
      linear-gradient(to right, teal, #0a6048);
    -webkit-transition: 0.5s all;
    -moz-transition: 0.5s all;
    -o-transition: 0.5s all;
    -ms-transition: 0.5s all;
    transition: 0.5s all;
  }

  .btn:hover {
    transform: scale(1.1);
  }

  /* about us
  style starts */
  .about-style {
    margin: 8rem 0;
  }

  .about-style .main-heading,
  .service-style .main-heading,
  .contact-style .main-heading {
    font-size: 4.5rem;
    color: #ffffff;
    letter-spacing: 1px;
    font-weight: bold;
    font-variant: small-caps;
    font-weight: bolder;
    text-shadow: 2px 2px #75c2ac;
    margin: 0px auto 0px auto;
  }

  .about-style .sub-heading,
  .service-style .sub-heading,
  .contact-style .sub-heading {
    font-size: 2.5rem;
    letter-spacing: 3px;
    line-height: 2;
    color: #454242;
    font-weight: 500;
    margin: 1px auto 0px auto;
  }

  /* our services style starts */
  .service-style {
    margin-bottom: 10rem;
  }

  .box {
    position: relative;
    width: 100%;
    padding-right:
      15px;
    padding-left: 15px;
  }

  .our-services {
    margin-top: 75px;
    padding-bottom:
      30px;
    padding: 0 30px;
    min-height: 198px;
    text-align: center;
    border-radius:
      10px;
    background-color: #fff;
    transition: all 0.4s ease-in-out;
    box-shadow: 0 0 25px 0 rgba(20, 27, 202, 0.17);
  }

  .our-services .icon {
    margin-bottom:
      -21px;
    transform: translateY(-50%);
    text-align: center;
  }

  .our-services h4 {
    font-size: 3rem;
    font-weight: bold;
  }

  .our-services:hover h4,
  .our-services:hover p {
    color: #fff;
  }

  .speedup:hover {
    box-shadow: 0 0 25px 0 rgba(33, 39, 221, 0.2);
    cursor: pointer;
    background-image:
      linear-gradient(60deg, orange 10%, #0a6048 50%);
  }

  .settings:hover {
    box-shadow: 0 0 25px 0 rgba(20, 27, 201, 0.2);
    cursor: pointer;
    transform:
      scale(1.1);
    background-image: linear-gradient(to right, rgb(236, 231, 231), rgb(165, 158, 158), #0a6048);
  }

  .privacy:hover {
    box-shadow: 0 0 25px 0 rgba(20, 27, 201, 0.2);
    cursor:
      pointer;
    background-image: linear-gradient(60deg, orange 10%, #0a6048 50%);
  }

  .backups:hover {
    box-shadow: 0 0 25px 0 rgba(20, 27, 201, 0.2);
    cursor:
      pointer;
    background-image: linear-gradient(60deg, orange 10%, #0a6048 50%);
  }

  .ssl:hover {
    box-shadow: 0 0 25px 0 rgba(20, 27, 201, 0.2);
    cursor: pointer;
    background-image: linear-gradient(60deg, orange 10%, #0a6048 50%);
  }

  .database:hover {
    box-shadow: 0 0 25px 0 rgba(20, 27, 201, 0.2);
    cursor:
      pointer;
    background-image: linear-gradient(-45deg, 0%, #0a6048 50%);
  }

  /* our
  services style ends */
  /* contact us starts here */
  .contact-style {
    margin:
      10rem 0;
  }

  label {
    margin-top: 1.2rem;
    margin-bottom: 0;
  }

  .form-control {
    padding: 2rem 1rem;
    font-size: 1.2rem;
    font-weight: 600;
  }

  #emailHelp,
  ::placeholder {
    font-size: 1.4rem;
  }

  ::placeholder {
    font-weight: 600;
  }

  /*
  footer sections ends */
  footer {
    background: rgb(221, 217, 217);
  }

  footer p {
    padding: 1rem 0;
    margin: 0;
    text-align: center;
  }

  .carousel-item {
    height:
      85vh;
    width: 100vw;
  }


  .carousel-item h5 {
    font-size: 3rem;
    font-family: 'Tilt Prism';
    font-weight: bolder;
    background-image: linear-gradient(to right, rgb(236, 231, 231), rgb(165, 158, 158), #0a6048);
    border-radius: 10px;
    color: rgb(39, 38, 38);
    text-shadow: 1px 2px #0a6048;
  }

  .carousel-item img {
    height: 100%;
    width: 100%;
    object-fit: fill;
  }

  .carousel-item .review {
    background-color: #0a6048;
  }

  .carousel-caption {
    width: 50%;
    margin: auto auto;
    font-weight: lighter;
  }

  .carousel-caption-review {
    width: 60%;
    margin: 200px auto;
    text-align: center;
    background-color: transparent;
  }

  .carousel-caption-review .customer {
    font-weight: 25px;
  }

  .carousel-inner {
    background-image: linear-gradient(to right, #c2d6d0, #168565, #064533, #064533);
  }

  /*
  media queries part starts here */
  @media (max-width: 768px) {
    #logo {
      font-size: 2.5rem;
    }

    .hero-text h1 {
      font-size: 3rem;
    }

    figure {
      margin: 5rem 0;
    }

    figure img {
      min-width: 100%;
    }

    .hero-text p,
    .our-services p,
    label {
      font-size: 1.5rem;
    }

    .about-style .sub-heading,
    .service-style .sub-heading,
    .contact-style .sub-heading {
      font-size: 2rem;
    }
  }
</style>